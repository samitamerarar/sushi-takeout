<section class="hero py-16 px-2">
  <div class="container mx-auto flex justify-between items-center">
    <div class="w-1/2">
      <h1 class="text-5xl font-bold">Sushi Takeout</h1>
      <h6 class="text-lg"><em>Sushi hungry?</em></h6>
      <a href="#section-menu"
        ><button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">
          Order Now
        </button></a
      >
    </div>
    <div class="w-1/2">
      <img src="/img/hero-sushi.png" alt="" height="760px" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-12 px-2" id="section-menu">
  <h1 class="text-xl font-bold mb-8">Menu</h1>
  <div class="flex flex-wrap">
    <% sushis.forEach(function(sushi) { %>
    <div class="sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 mb-12 mx-auto">
      <img class="h-40 mb-4 mx-auto rounded-full" src="/img/menu/<%= sushi.image %>" alt="" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= sushi.name %></h2>
        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= sushi.size %></span>
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg"><%= sushi.price %>$</span>
          <button
            data-sushi="<%= JSON.stringify(sushi) %>"
            class="add-to-cart rounded-full py-1 px-6 flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
<section class="footer pt-16 mt-12 pb-1">
  <div class="container mx-auto flex justify-between items-center">
    <span class="text-xs mx-auto text-gray-500"
      >&copy;2020 Sushi Takeout. All rights reserved.</span
    >
  </div>
</section>
